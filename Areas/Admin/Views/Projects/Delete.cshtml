@model GoatSilencerArchitecture.Models.Project

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Project</h1>

<h3>Are you sure you want to delete this project?</h3>
<div>
    <h4>@Model.Title</h4>
    <p>@Model.Description</p>

    <!-- show main images -->
    <div class="mb-3">
        @if (!string.IsNullOrEmpty(Model.MainImageLeft))
        {
            <img src="@Model.MainImageLeft" class="thumb-img" />
        }
        @if (!string.IsNullOrEmpty(Model.MainImageTopRight))
        {
            <img src="@Model.MainImageTopRight" class="thumb-img" />
        }
        @if (!string.IsNullOrEmpty(Model.MainImageBottomRight))
        {
            <img src="@Model.MainImageBottomRight" class="thumb-img" />
        }
    </div>

    <!-- show gallery images -->
    <h5>Gallery Images</h5>
    <div class="row">
        @foreach (var img in Model.Images)
        {
            <div class="col-md-3">
                <img src="@img.ImageUrl" class="thumb-img" />
            </div>
        }
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger mt-3">Delete</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>

<style>
    .thumb-img {
        width: 400px;
        height: 200px;
        object-fit: cover;
        border-radius: 6px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.15);
    }
</style>
