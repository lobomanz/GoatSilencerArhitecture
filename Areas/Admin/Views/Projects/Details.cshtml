@model GoatSilencerArchitecture.Models.Project

@{
    ViewData["Title"] = "Details";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Admin/Projects/Shared.css" asp-append-version="true" />
}

<h1>Project Details</h1>
<hr />

<div class="mb-3">
    <h4>@Model.Title</h4>
    <p>@Model.Description</p>

    <dl class="row">
        <dt class="col-sm-2">Published</dt>
        <dd class="col-sm-10">@Model.IsPublished</dd>

        <dt class="col-sm-2">Sort Order</dt>
        <dd class="col-sm-10">@Model.SortOrder</dd>

        <dt class="col-sm-2">Created</dt>
        <dd class="col-sm-10">@Model.CreatedUtc.ToString("g")</dd>

        <dt class="col-sm-2">Updated</dt>
        <dd class="col-sm-10">@Model.UpdatedUtc.ToString("g")</dd>
    </dl>
</div>

<h5>Image Sections</h5>
<div class="row mb-3">
    @foreach (var section in Model.ImageSections)
    {
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(section.ImageUrl))
            {
                <img src="@(section.ImageUrl)" class="img-fluid mb-2" />
            }
            @if (!string.IsNullOrEmpty(section.Heading))
            {
                <h6>@(section.Heading)</h6>
            }
            @if (!string.IsNullOrEmpty(section.Paragraph))
            {
                <p>@(section.Paragraph)</p>
            }
            <p><em>Position: @(section.Position)</em></p>
        </div>
    }
</div>



<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
