@model GoatSilencerArchitecture.Models.AboutComponent

@{
    ViewData["Title"] = "Delete About Component";
}

<h1>Delete About Component</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LayoutType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LayoutType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TextContent)
        </dt>
        <dd class="col-sm-10">
            @(Model.TextContent.Length > 100 ? Model.TextContent.Substring(0, 100) + "..." : Model.TextContent)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image1Path)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Image1Path))
            {
                <img src="@Model.Image1Path" class="img-thumbnail" style="max-height:150px;" />
            }
            else
            {
                <span>No Image 1</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image2Path)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Image2Path))
            {
                <img src="@Model.Image2Path" class="img-thumbnail" style="max-height:150px;" />
            }
            else
            {
                <span>No Image 2</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
