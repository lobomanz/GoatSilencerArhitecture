@model IEnumerable<GoatSilencerArchitecture.Models.Gallery>
@{
    Layout = "_PublicLayout";
    ViewData["Title"] = "Projects";
}

<h1 class="mb-4">Our Projects</h1>

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var project in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <a asp-controller="Projects" asp-action="Details" asp-route-id="@project.Id" class="text-decoration-none">

                        <!-- Main image with fallback -->
                        @if (!string.IsNullOrEmpty(project.MainImage))
                        {
                            <img src="@project.MainImage" class="card-img-top" style="object-fit: cover; height: 200px;" alt="@project.Title" />
                        }
                        else if (project.Images != null && project.Images.Any())
                        {
                            <img src="@project.Images.First().FilePath" class="card-img-top" style="object-fit: cover; height: 200px;" alt="@project.Title" />
                        }
                        else
                        {
                            <img src="/images/placeholder.jpg" class="card-img-top" style="object-fit: cover; height: 200px;" alt="No image" />
                        }

                        <div class="card-body text-center">
                            <h5 class="card-title text-dark">@project.Title</h5>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No projects available at the moment. Please check back later.</p>
}
