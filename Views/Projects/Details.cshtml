@model GoatSilencerArchitecture.Models.Project
@{
    Layout = "_Layout";
    ViewData["Title"] = Model?.Title ?? "Project";
}

<div class="container-fluid px-0">
    <!-- Main project images -->
    <div class="row">
        @if (!string.IsNullOrEmpty(Model?.MainImageLeft))
        {
            <div class="col-md-4 mb-3 text-center">
                <img src="@Model.MainImageLeft" class="img-fluid" style="max-height:600px; object-fit:cover;" alt="@Model.ImageLeftHeading" />
                @if (!string.IsNullOrEmpty(Model.ImageLeftHeading))
                {
                    <h5 class="mt-2">@Model.ImageLeftHeading</h5>
                }
                @if (!string.IsNullOrEmpty(Model.ImageLeftParagraph))
                {
                    <p>@Model.ImageLeftParagraph</p>
                }
            </div>
        }

        <div class="col-md-8">
            @if (!string.IsNullOrEmpty(Model?.MainImageTopRight))
            {
                <div class="mb-3 text-center">
                    <img src="@Model.MainImageTopRight" class="img-fluid" style="max-height:300px; object-fit:cover;" alt="@Model.ImageRightTopHeading" />
                    @if (!string.IsNullOrEmpty(Model.ImageRightTopHeading))
                    {
                        <h5 class="mt-2">@Model.ImageRightTopHeading</h5>
                    }
                    @if (!string.IsNullOrEmpty(Model.ImageRightTopParagraph))
                    {
                        <p>@Model.ImageRightTopParagraph</p>
                    }
                </div>
            }

            @if (!string.IsNullOrEmpty(Model?.MainImageBottomRight))
            {
                <div class="mb-3 text-center">
                    <img src="@Model.MainImageBottomRight" class="img-fluid" style="max-height:300px; object-fit:cover;" alt="@Model.ImageRightBottomHeading" />
                    @if (!string.IsNullOrEmpty(Model.ImageRightBottomHeading))
                    {
                        <h5 class="mt-2">@Model.ImageRightBottomHeading</h5>
                    }
                    @if (!string.IsNullOrEmpty(Model.ImageRightBottomParagraph))
                    {
                        <p>@Model.ImageRightBottomParagraph</p>
                    }
                </div>
            }
        </div>
    </div>
</div>

<div class="container my-5">
    <h1 class="mb-4 text-center">@Model?.Title</h1>

    @if (!string.IsNullOrEmpty(Model?.RichTextContent))
    {
        <div class="project-content">
            @Html.Raw(Model.RichTextContent)
        </div>
    }
    else
    {
        <p>No content available for this project.</p>
    }

    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-secondary">← Back to Projects</a>
    </div>
</div>
