@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Public layout
}

<div class="text-center mb-5">
    <h1 class="display-4">Welcome to GoatSilencer Architecture</h1>
    <p class="lead">We design inspiring, sustainable, and functional spaces.</p>
</div>

<div class="row text-center">
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h5 class="card-title">Our Projects</h5>
                <p class="card-text">See some of the latest projects we’ve worked on.</p>
                <a asp-controller="Projects" asp-action="Index" class="btn btn-primary">View Projects</a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h5 class="card-title">Our Services</h5>
                <p class="card-text">Learn more about the architectural services we provide.</p>
                <a asp-controller="Services" asp-action="Index" class="btn btn-primary">View Services</a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h5 class="card-title">Contact Us</h5>
                <p class="card-text">Let’s discuss how we can bring your vision to life.</p>
                <a asp-controller="Contact" asp-action="Index" class="btn btn-primary">Get in Touch</a>
            </div>
        </div>
    </div>
</div>
