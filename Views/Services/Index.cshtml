@model IEnumerable<GoatSilencerArchitecture.Models.Gallery>
@{
    Layout = "_PublicLayout";
    ViewData["Title"] = "Services";
}

<div class="container my-5" style="max-width:1600px;">
    <h1 class="mb-4 text-center">Our Services</h1>

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var service in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <a asp-controller="Services" asp-action="Details" asp-route-id="@service.Id" class="text-decoration-none">
                            <img src="@Url.Content(service.MainImage ?? "/uploads/placeholder.jpg")"
                                 class="card-img-top" alt="@service.Title" style="object-fit: cover; height: 200px;" />
                            <div class="card-body text-center">
                                <h5 class="card-title text-dark">@service.Title</h5>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center">No services available at the moment.</p>
    }
</div>
