@model IEnumerable<GoatSilencerArchitecture.Models.Gallery>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Our Services";
}

<h1 class="mb-4">Our Services</h1>

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var service in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <a asp-controller="Services" asp-action="Details" asp-route-id="@service.Id" class="text-decoration-none">

                        <!-- Main image with fallback -->
                        @{
                            var mainImageToDisplay = service.MainImageLeft ?? service.MainImageTopRight ?? service.MainImageBottomRight;
                        }
                        @if (!string.IsNullOrEmpty(mainImageToDisplay))
                        {
                            <img src="@mainImageToDisplay" class="card-img-top" style="object-fit: cover; height: 200px;" alt="@service.Title" />
                        }
                        else if (service.Images != null && service.Images.Any())
                        {
                            <img src="@service.Images.First().FilePath" class="card-img-top" style="object-fit: cover; height: 200px;" alt="@service.Title" />
                        }
                        else
                        {
                            <img src="/images/placeholder.jpg" class="card-img-top" style="object-fit: cover; height: 200px;" alt="No image" />
                        }

                        <div class="card-body text-center">
                            <h5 class="card-title text-dark">@service.Title</h5>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No services available at the moment. Please check back later.</p>
}
