@model IEnumerable<GoatSilencerArchitecture.Models.Gallery>
@{
    ViewData["Title"] = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="fullpage-slider">
    <div class="slider-container">
        @if (Model != null && Model.Any())
        {
            foreach (var project in Model)
            {
                var img = !string.IsNullOrEmpty(project.MainImage)
                    ? project.MainImage
                    : (project.Images.Any() ? project.Images.First().FilePath : "/images/placeholder.jpg");

                <div class="slide" style="background-image: url('@Url.Content(img)')">
                    <div class="slide-content">
                        <h2>@project.Title</h2>
                        <a asp-controller="Projects" asp-action="Details" asp-route-id="@project.Id"
                           class="btn btn-outline-light mt-2">Look at the project</a>
                    </div>
                </div>
            }
        }
    </div>

    <div class="slider-dots">
        @if (Model != null)
        {
            for (int i = 0; i < Model.Count(); i++)
            {
                <div class="dot" data-index="@i"></div>
            }
        }
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/Home/Index.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/Home/Index.js" asp-append-version="true"></script>
}