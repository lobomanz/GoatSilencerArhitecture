@{
    ViewData["Title"] = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Welcome to GoatSilencer Architecture</h1>
    <p>Your trusted architecture partner. Explore our <a asp-controller="Projects" asp-action="Index">Projects</a> and <a asp-controller="Services" asp-action="Index">Services</a>.</p>
</div>

<div id="loader" style="
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8); /* dark overlay */
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;">

    <div class="magic-circle">
        <img src="/images/loading.gif" alt="Loading..."
             style="width:200px;height:200px;border-radius:50%;" />
        <div class="ring"></div>
    </div>
</div>

<style>
    .magic-circle {
        width: 240px;
        height: 240px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        background: radial-gradient(circle, rgba(0,255,255,0.15), transparent 70%);
        box-shadow: 0 0 30px rgba(0, 255, 255, 0.6), 0 0 60px rgba(0, 128, 255, 0.4), 0 0 100px rgba(0, 128, 255, 0.3);
    }

        /* The outer magic ring */
        .magic-circle .ring {
            position: absolute;
            width: 260px;
            height: 260px;
            border: 3px dashed rgba(0, 255, 255, 0.7);
            border-radius: 50%;
            box-shadow: 0 0 15px rgba(0,255,255,0.5);
        }
</style>

<script>
    // Rotate the magic ring with JS instead of CSS keyframes
    let angle = 0;
    const ring = document.querySelector('.magic-circle .ring');
    setInterval(() => {
        angle = (angle + 2) % 360; // increase rotation angle
        ring.style.transform = `rotate(${angle}deg)`;
    }, 30); // ~33fps (smooth enough)

    // Hide loader after 3 seconds
    window.addEventListener("load", function () {
        setTimeout(function () {
            document.getElementById("loader").style.display = "none";
        }, 30000);
    });
</script>
