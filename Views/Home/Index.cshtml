@model IEnumerable<GoatSilencerArchitecture.Models.Gallery>
@{
    ViewData["Title"] = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="hero-slider">
    @if (Model != null && Model.Any())
    {
        var index = 0;
        foreach (var project in Model)
        {
            var img = !string.IsNullOrEmpty(project.MainImage)
            ? project.MainImage
            : (project.Images.Any() ? project.Images.First().FilePath : "/images/placeholder.jpg");

            <div class="hero-slide @(index == 0 ? "active" : "")"
                 style="background-image: url('@img')">
                <div class="hero-content">
                    <h2>@project.Title</h2>
                    <a asp-controller="Projects" asp-action="Details" asp-route-id="@project.Id"
                       class="btn btn-light mt-2">See this project</a>
                </div>
            </div>
            index++;
        }
    }

    <div class="hero-dots">
        @for (int i = 0; i < (Model?.Count() ?? 0); i++)
        {
            <div class="hero-dot @(i == 0 ? "active" : "")" data-index="@i"></div>
        }
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/Home/Index.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/Home/Index.js" asp-append-version="true"></script>
}
