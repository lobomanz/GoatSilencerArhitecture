@{
    ViewData["Title"] = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Welcome to GoatSilencer Architecture</h1>
    <p>Your trusted architecture partner. Explore our <a asp-controller="Projects" asp-action="Index">Projects</a> and <a asp-controller="Services" asp-action="Index">Services</a>.</p>
</div>

<div id="loader" style="
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8); /* dark overlay */
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;">

    <div class="magic-circle">
        <img src="/images/loading.gif" alt="Loading..."
             style="width:200px;height:200px;border-radius:50%;" />
        <div class="ring"></div>
    </div>
</div>



@section Scripts {
    <script src="~/js/Home/Index.js" asp-append-version="true"></script>
}
